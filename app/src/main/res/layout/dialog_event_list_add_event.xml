<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              tools:context="lunch_together.purkynova.com.lunchtogetherclient.EventListActivity">

    <TextView
        android:id="@+id/headerCreateTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:text="Vytvořit událost"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="40dp">

        <EditText
            android:id="@+id/event_add_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Zadej název skupiny"
            android:inputType="textEmailAddress"/>

        <AutoCompleteTextView
            android:id="@+id/restaurantsACTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Zadej Restauraci"
            android:completionThreshold="0" />

        <EditText
            android:id="@+id/event_add_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:hint="Datum"/>

        <EditText
            android:id="@+id/event_add_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:hint="Čas"/>

        <EditText
            android:id="@+id/event_add_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Zadej popis skupiny"/>

        <EditText
            android:id="@+id/event_add_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Zadej tagy skupiny"/>
    </LinearLayout>
</LinearLayout>