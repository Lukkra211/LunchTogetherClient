<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:text="Vytvořit událost"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="40dp">
        <EditText
            android:id="@+id/event_add_title"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Zadej název skupiny" />
        <EditText
            android:id="@+id/event_add_time"
            android:inputType="datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Datum" />
        <EditText
            android:id="@+id/event_add_date"
            android:inputType="datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Čas" />
        <EditText
            android:id="@+id/event_add_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Zadej popis skupiny" />
        <EditText
            android:id="@+id/event_add_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Zadej tagy skupiny" />
    </LinearLayout>
</LinearLayout>